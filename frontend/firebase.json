{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"emulators": {
		"auth": {
			"port": 9099
		},
		"firestore": {
			"port": 8080
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": false,
		"functions": {
			"port": 5001
		}
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
		}
	],
	"storage": {
		"rules": "storage.rules"
	}
}
